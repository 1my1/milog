<!DOCTYPE html>
<html style="overflow-y: scroll;">
  <%= render 'shared/page_head' %>
  <body>
    
    <%= content_tag :div, class: yield(:bodyclass) do -%>
    <%= render 'shared/blog_header' %>
    
    <%= render 'shared/flash_messages_inner'%>
    <%= yield %>
    <%= render 'features/back_to_top' %>
    <%= render 'shared/site_footer' %>
    <% end -%>
    <%= render 'features/search_dialog', placeholder_text: t('search_in_blog'), search_url: search_user_path(@user.username) %>
    
    <%= debug(params) if Rails.env.development? %>
    <%= javascript_include_tag 'layout' %>
    <%= javascript_include_tag 'search' %>
  </body>
</html>