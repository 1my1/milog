<ul id="result">
  <% articles.each_with_hit do |record, hit| %>
    <li>
      <%= link_to hit.highlight.title ? (raw hit.highlight.title[0]) : record.title, article_path(record.id), class: 'title' %>
      <%= content_tag :div, hit.highlight.content ? (raw hit.highlight.content[0]) : record.content, class: 'content' %>
    </li>
  <% end %>
</ul>